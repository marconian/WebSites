@model IEnumerable<StalRondo.Models.Picture>
<div class="card-columns">
    @foreach (var item in Model)
    {
        <div class="card">
            <img class="card-img-top img-fluid" src="data:image/png;base64,@Convert.ToBase64String(item.Data)" data-toggle="modal" data-target="#modal-@item.PictureID.ToString()" />
            <div class="card-block">
                <div class="card-text">
                    @Html.DisplayFor(model => item.Description)
                </div>
            </div>
            <div class="card-footer">
                <div class="card-text text-xs-right">
                    <a href="@Url.Action("Edit", new { /* id=item.PrimaryKey */ })"><span class='fa fa-pencil'></span></a>
                    <a href="@Url.Action("Delete", new { /* id=item.PrimaryKey */ })"><span class='fa fa-trash'></span></a>
                </div>
            </div>
        </div>
        <div id="modal-@item.PictureID.ToString()" class="modal modal-image">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <img class="modal-content" src="data:image/png;base64,@Convert.ToBase64String(item.Data)" />
            <div id="caption"></div>
        </div>
    }
</div>
