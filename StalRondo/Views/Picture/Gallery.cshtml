@model IEnumerable<StalRondo.Models.Picture>

    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <img class="card-img-top img-fluid" src="data:image/png;base64,@Convert.ToBase64String(item.Data)" />
                <div class="card-block">
                    <h4 class="card-title">@Html.DisplayFor(model => item.Horse.Name)</h4>
                    <div class="card-text">
                        @Html.DisplayFor(model => item.Description)
                    </div>
                </div>
            </div>
        </div>


